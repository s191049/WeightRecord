<h1><%= @member.name  %></h1>
<p><%= @member.height %> cm</p>
<%= render 'members/show_calendar', mem_records: @member.weight_records, mem: @member %>

<div class="row">
  <%= link_to '編集', members_edit_path(@member.id), class:"col btn btn-lg btn-primary" %>
  <%= link_to '削除', members_destroy_path(@member.id), data: { turbo_method: :delete, turbo_confirm: "消すの？" }, class:"col btn btn-lg btn-danger" %>
</div>
