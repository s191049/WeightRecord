<%= form_with(model: member, url: path, data: form_data, autocomplete: "off") do |f| %>

<%= render 'shared/error_messages', object: f.object %>

<p class="form-group">
  <%= f.label :名前, class: "form-label" %>
  <%= f.text_field :name, class: "form-control", autocomplete: "off" %>
</p>

<p class="form-group">
  <%= f.label "身長(cm)", class: "form-label" %>
  <%= f.number_field :height, step:"0.1", class: "form-control", autocomplete: "off" %>
</p>

<p>
  <%= f.submit submit_text, class: "btn btn-primary btn-lg container-fluid" %>
</p>

<% end %>
